{
  "name": "bijo-portfolio",
  "version": "1.0.0",
  "description": "Portfolio for Bijo K Binoy",
  "main": "server/server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && uvicorn server:app --reload",
    "client": "cd client && npm run dev",
    "client-install": "cd client && npm install --legacy-peer-deps",
    "build": "npm run client-install && cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install --legacy-peer-deps"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [],
  "author": "Bijo K Binoy",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}